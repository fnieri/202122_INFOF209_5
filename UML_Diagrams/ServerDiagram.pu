Package Chat{
    class Message{
        'Fields
        - timeSent: Date
        - sender: User
        - receiver: User
        -sentMessage: string
        'Methods
        +read()
        +send()
            
        
    }
    class Date <<struct>>{
    'Fields
        +hour : int
        +minute : int
        +second : int
        +year : int
        +month : int
        +day : int
    }
}


